{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build with Clang",
        "type": "shell",
        "command": "clang++",
        "args": [
          "-std=c++11",
          "-stdlib=libc++",
          "helloworld.cpp",
          "-o",
          "helloworld.out",
          "--debug"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }

// The args array specifies the command-line arguments that will be passed to the compiler that was specified in the previous step.
// The "isDefault": true value in the group object specifies that this task will be run when you press ⇧⌘B
// The --debug argument causes debug symbols to be produced, which is required for stepping through code when you debug.


